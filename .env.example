APP_NAME="Nice Patrol"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_TIMEZONE=Asia/Jakarta
APP_URL=http://localhost:8000

# Domain Configuration - Production
DASHBOARD_DOMAIN=dash.nicepatrol.id
MOBILE_DOMAIN=app.nicepatrol.id
API_DOMAIN=apiv1.nicepatrol.id

# Domain Configuration - Development (uncomment for dev)
# DASHBOARD_DOMAIN=devdash.nicepatrol.id
# MOBILE_DOMAIN=devapp.nicepatrol.id
# API_DOMAIN=devapi.nicepatrol.id

APP_LOCALE=id
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=id_ID

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

DB_CONNECTION=pgsql
DB_HOST=127.0.0.1
DB_PORT=5432
DB_DATABASE=patrol_db
DB_USERNAME=patrol_user
DB_PASSWORD=patrol_password

SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=.nicepatrol.id

# Sanctum Configuration
SANCTUM_STATEFUL_DOMAINS=dash.nicepatrol.id,app.nicepatrol.id
# For development, use: devdash.nicepatrol.id,devapp.nicepatrol.id

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

CACHE_STORE=database
CACHE_PREFIX=

MEMCACHED_HOST=127.0.0.1

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

MAIL_MAILER=log
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

VITE_APP_NAME="${APP_NAME}"

# Maps Configuration - Using CartoDB (CARTO) Maps
MAPS_TILE_SERVER=https://{s}.basemaps.cartocdn.com/light_all/{z}/{x}/{y}{r}.png
MAPS_ATTRIBUTION="© <a href=\"https://www.openstreetmap.org/copyright\">OpenStreetMap</a> contributors © <a href=\"https://carto.com/attributions\">CARTO</a>"
MAPS_MAX_ZOOM=19
MAPS_MIN_ZOOM=1
MAPS_DEFAULT_CENTER_LAT=-6.2088
MAPS_DEFAULT_CENTER_LNG=106.8456
MAPS_DEFAULT_ZOOM=17

# Alternative tile servers:
# OpenStreetMap (basic):
# MAPS_TILE_SERVER=https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png
# MAPS_ATTRIBUTION="© <a href=\"https://www.openstreetmap.org/copyright\">OpenStreetMap</a> contributors"

# CartoDB Dark theme:
# MAPS_TILE_SERVER=https://{s}.basemaps.cartocdn.com/dark_all/{z}/{x}/{y}{r}.png

# CartoDB Voyager theme:
# MAPS_TILE_SERVER=https://{s}.basemaps.cartocdn.com/rastertiles/voyager/{z}/{x}/{y}{r}.png

# Adonara Maps (when available):
# MAPS_TILE_SERVER=https://maps.adonara.co.id/{z}/{x}/{y}.png
# MAPS_ATTRIBUTION="© <a href=\"https://maps.adonara.co.id/\">Adonara Maps</a>"
